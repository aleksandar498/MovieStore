@model MovieStore.viewModels.NewRentalViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("Save", "NewRental"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Rental</h4>
        <hr />

        <div class="form-group">

            <div class="col-md-10">
                @Html.LabelFor(model => model.Rental.DateRendted)
                @Html.EditorFor(model => model.Rental.DateRendted, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                @Html.LabelFor(model => model.Rental.DateReturned)
                @Html.EditorFor(model => model.Rental.DateReturned, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>
        <div class="form-group">

            <div class="col-md-10">
                @Html.LabelFor(m => m.Rental.CustomerId)
                @Html.DropDownListFor(m => m.Rental.CustomerId, new SelectList(Model.Customers, "Id", "Name"), "Select customer", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Rental.CustomerId)
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-10">
                @Html.LabelFor(m => m.Rental.MovieId)
                @Html.DropDownListFor(m => m.Rental.MovieId, new SelectList(Model.Movies, "Id", "Name"), "Select movie", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Rental.MovieId)

            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}